<%- include('../partials/userHeader', { user: user }) %>

<main class="ml-0 md:ml-60 p-4 md:p-8 bg-gray-100 min-h-screen">
  <h1 class="text-2xl font-bold mb-6">Change Password</h1>

  <form action="/user/change-password" method="POST" class="max-w-md bg-white p-6 rounded-xl shadow-md space-y-4">
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Current Password</label>
      <input type="password" name="currentPassword" required class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary" />
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">New Password</label>
      <input type="password" name="newPassword" required class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary" />
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Re-enter New Password</label>
      <input type="password" name="confirmNewPassword" required class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary" />
    </div>
    <button type="submit" class="w-full bg-primary text-white py-3 rounded-xl font-semibold hover:bg-blue-700 transition">
      Update Password
    </button>
  </form>
</main>
