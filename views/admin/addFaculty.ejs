<%- include("../partials/adminHeader") %>

<div class="max-w-md mx-auto mt-10 p-6 bg-white rounded shadow">
  <h2 class="text-xl font-bold mb-4">Add New Faculty</h2>
  <form action="/admin/add-faculty" method="POST">
    <div class="mb-4">
      <label class="block">Name</label>
      <input type="text" name="name" required class="w-full p-2 border rounded" />
    </div>
    <div class="mb-4">
      <label class="block">Email</label>
      <input type="email" name="email" required class="w-full p-2 border rounded" />
    </div>
    <div class="mb-4">
      <label class="block">Password</label>
      <input type="password" name="password" required class="w-full p-2 border rounded" />
    </div>
    <div class="mb-4">
      <label class="block">Department</label>
      <select name="department" class="w-full p-2 border rounded" required>
        <option value="">Select Department</option>
        <option value="MCA">MCA</option>
        <option value="MBA">MBA</option>
        <option value="iMCA">iMCA</option>
        <option value="Btech.CSE">Btech.CSE</option>
        <option value="Btech.ECE">Btech.ECE</option>
        <option value="Btech.ME">Btech.ME</option>
        <option value="Btech.CE">Btech.CE</option>
        <option value="Btech.EEE">Btech.EEE</option>
        <option value="Btech.NASB">Btech.NASB</option>
      </select>
    </div>
    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded">Add Faculty</button>
  </form>
</div>