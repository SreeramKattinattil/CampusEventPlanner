<%- include('../partials/adminHeader', { admin: admin }) %>

<main class="ml-0 md:ml-60 p-4 md:p-8 bg-gradient-to-br from-gray-100 to-gray-200 min-h-screen">
  <div class="max-w-7xl mx-auto">

    <!-- Page Title -->
    <h2 class="text-2xl md:text-3xl font-extrabold text-gray-800 mb-6">All Events</h2>

    <!-- Search Bar -->
    <form action="/admin/events" method="GET" class="mb-6 flex flex-col md:flex-row items-start md:items-center gap-2">
      <input
        type="text"
        name="search"
        placeholder="Search by event name..."
        value="<%= searchQuery || '' %>"
        class="p-2 border rounded w-full md:w-1/3"
      />
      <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded mt-2 md:mt-0">Search</button>
    </form>

    <!-- Carousel Section (Optional Featured Events) -->
    <% if(events.length > 0) { %>
    <div class="relative overflow-hidden mb-8">
      <div id="carousel" class="flex items-center gap-4 transition-transform duration-500 cursor-grab">
        <% events.forEach(event => { %>
          <div class="slide min-w-[200px] bg-white/80 backdrop-blur-lg rounded-2xl shadow-lg border border-white/50 p-4 transition-transform duration-500">
            <img 
              src="<%= event.media[0] ? '/uploads/' + event.media[0] : 'https://via.placeholder.com/300x200' %>" 
              alt="Event Poster"
              class="rounded-xl mb-2 h-36 w-full object-cover cursor-pointer"
              onclick="window.location.href='/admin/eventDetails/<%= event._id %>'"
            />
            <h3 class="text-lg font-semibold mb-1"><%= event.name %></h3>
            <p class="text-sm text-gray-500">ðŸ“… <%= event.date %> | ðŸ•’ <%= event.time %></p>
            <p class="text-sm text-gray-500">ðŸ’° Fee: â‚¹<%= event.regFee %></p>
          </div>
        <% }) %>
      </div>

      <!-- Carousel Arrows -->
      <button id="prevBtn" class="absolute left-2 top-1/2 -translate-y-1/2 bg-white/50 p-3 rounded-full shadow hover:bg-white/70 transition hidden md:block">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
        </svg>
      </button>
      <button id="nextBtn" class="absolute right-2 top-1/2 -translate-y-1/2 bg-white/50 p-3 rounded-full shadow hover:bg-white/70 transition hidden md:block">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
        </svg>
      </button>

      <!-- Dots -->
      <div id="dots" class="absolute bottom-2 left-1/2 -translate-x-1/2 flex gap-2"></div>
    </div>
    <% } %>

    <!-- Responsive Events Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% events.forEach(event => { %>
        <div class="backdrop-blur-lg bg-white/80 rounded-2xl shadow-lg border border-white/50 p-4 hover:shadow-xl transition transform hover:scale-[1.02] animate-fadeIn">
          <img 
            src="<%= event.media[0] ? '/uploads/' + event.media[0] : 'https://via.placeholder.com/300x200' %>" 
            alt="Event Poster" 
            class="rounded-lg mb-4 h-48 w-full object-cover cursor-pointer"
            onclick="window.location.href='/admin/eventDetails/<%= event._id %>'"
          />
          <h3 class="text-lg md:text-xl font-semibold mb-1"><%= event.name %></h3>
          <p class="text-sm text-gray-500">ðŸ“… <%= event.date %> | ðŸ•’ <%= event.time %></p>
          <p class="text-sm text-gray-500">ðŸ’° Fee: â‚¹<%= event.regFee %></p>
        </div>
      <% }) %>
    </div>

  </div>
</main>
