<%- include('../partials/userHeader') %>

<div class="flex-1 p-6 bg-gray-100 min-h-screen">
  <div class="max-w-4xl mx-auto bg-white p-6 rounded shadow-lg">
    <h2 class="text-3xl font-bold mb-4"><%= event.name %></h2>
    <p class="text-gray-700 mb-2"><%= event.description %></p>
    <p class="text-sm text-gray-500">📅 Date: <%= event.date %></p>
    <p class="text-sm text-gray-500">🕒 Time: <%= event.time %></p>
    <p class="text-sm text-gray-500">📍 Venue: <%= event.venue %></p>
    <p class="text-sm text-gray-500">💰 Fee: ₹<%= event.regFee %></p>

    <% if (event.media && event.media.length > 0) { %>
      <div class="mt-4 grid grid-cols-1 md:grid-cols-2 gap-4">
        <% event.media.forEach(file => { %>
          <img src="/uploads/<%= file %>" alt="Event Media" class="rounded-lg object-cover">
        <% }) %>
      </div>
    <% } %>

    <a href="/user/dashboard" class="mt-4 inline-block px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700">Back to Events</a>
  </div>
</div>
