<%- include("../partials/userHeader") %>

<main class="ml-60 p-8 bg-gradient-to-br from-gray-100 to-gray-200 min-h-screen">
  <div class="max-w-6xl mx-auto">

    <h2 class="text-3xl font-extrabold text-gray-800 mb-6">Upcoming Events</h2>

    <% if (events.length === 0) { %>
      <p class="text-gray-600">No events available right now. Please check back later!</p>
    <% } else { %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% events.forEach(event => { %>
          <a href="/user/event/<%= event._id %>" class="backdrop-blur-lg bg-white/80 rounded-2xl shadow-2xl border border-white/50 p-6 hover:shadow-xl transition transform hover:scale-[1.02] animate-fadeIn block">
            <% if (event.media && event.media.length > 0) { %>
              <img src="/uploads/<%= event.media[0] %>" alt="Event Thumbnail" class="rounded-xl mb-4 h-48 w-full object-cover">
            <% } %>
            <h3 class="text-xl font-semibold mb-2"><%= event.name %></h3>
            <p class="text-sm text-gray-500">ðŸ“… <%= event.date %> | ðŸ•’ <%= event.time %></p>
            <p class="text-sm text-gray-500">ðŸ’° Fee: â‚¹<%= event.regFee %></p>
          </a>
        <% }) %>
      </div>
    <% } %>

  </div>
</main>

<style>
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}
.animate-fadeIn { animation: fadeIn 0.4s ease-out; }
</style>
